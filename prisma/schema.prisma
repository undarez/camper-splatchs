generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String?        @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  role           Role           @default(USER)
  provider       String         @default("credentials")
  department     String?
  age            Int?
  camperModel    String?
  usageFrequency String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  accounts       Account[]
  analytics      Analytics[]
  notes          Note[]
  reviews        Review[]       @relation("ReviewAuthor")
  Review         Review[]
  sessions       Session[]
  stations       Station[]      @relation("StationAuthor")
  Station        Station[]
  activities     UserActivity[]
  visits         Visit[]
  ecoPoints      Int            @default(0)
  washHistory    WashHistory[]
}

model Station {
  id               String          @id @default(cuid())
  name             String
  address          String
  city             String?
  postalCode       String?
  latitude         Float
  longitude        Float
  images           String[]        @default([])
  status           StationStatus   @default(en_attente)
  type             StationType     @default(STATION_LAVAGE)
  phoneNumber      String?
  description      String?
  iconType         String?
  validatedAt      DateTime?
  validatedBy      String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  authorId         String
  encryptedName    String?
  encryptedAddress String?
  hasParking       Boolean         @default(false)
  userId           String?
  isLavaTrans      Boolean         @default(false)
  isDelisle        Boolean         @default(false)
  parkingDetails   ParkingDetails?
  reviews          Review[]        @relation("StationReviews")
  services         Service?
  author           User            @relation("StationAuthor", fields: [authorId], references: [id])
  user             User?           @relation(fields: [userId], references: [id])
  visits           Visit[]
  WashHistory      WashHistory[]
}

model ParkingDetails {
  id                 String          @id @default(cuid())
  isPayant           Boolean         @default(false)
  tarif              Float?
  taxeSejour         Float?
  hasElectricity     ElectricityType @default(NONE)
  commercesProches   String[]
  handicapAccess     Boolean         @default(false)
  totalPlaces        Int             @default(0)
  hasWifi            Boolean         @default(false)
  hasChargingPoint   Boolean         @default(false)
  waterPoint         Boolean         @default(false)
  wasteWater         Boolean         @default(false)
  wasteWaterDisposal Boolean         @default(false)
  blackWaterDisposal Boolean         @default(false)
  hasCctv            Boolean         @default(false)
  hasBarrier         Boolean         @default(false)
  createdAt          DateTime        @default(now())
  stationId          String          @unique
  station            Station         @relation(fields: [stationId], references: [id], onDelete: Cascade)
}

model Review {
  id               String   @id @default(cuid())
  content          String
  encryptedContent String
  rating           Int
  createdAt        DateTime @default(now())
  authorId         String
  stationId        String
  userId           String?
  author           User     @relation("ReviewAuthor", fields: [authorId], references: [id])
  station          Station  @relation("StationReviews", fields: [stationId], references: [id])
  User             User?    @relation(fields: [userId], references: [id])

  @@index([authorId])
  @@index([stationId])
}

model Service {
  id                 String           @id @default(cuid())
  highPressure       HighPressureType @default(NONE)
  tirePressure       Boolean          @default(false)
  vacuum             Boolean          @default(false)
  handicapAccess     Boolean          @default(false)
  wasteWater         Boolean          @default(false)
  waterPoint         Boolean          @default(false)
  wasteWaterDisposal Boolean          @default(false)
  blackWaterDisposal Boolean          @default(false)
  paymentMethods     PaymentMethod[]
  electricity        ElectricityType  @default(NONE)
  maxVehicleLength   Float?
  stationId          String           @unique
  createdAt          DateTime         @default(now())
  station            Station          @relation(fields: [stationId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Analytics {
  id        String    @id @default(cuid())
  type      EventType
  path      String
  userId    String?
  timestamp DateTime  @default(now())
  ip        String?
  user      User?     @relation(fields: [userId], references: [id])
}

model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  type      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model Visit {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  stationId String
  station   Station  @relation(fields: [stationId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Note {
  id        String   @id @default(cuid())
  content   String
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model WashHistory {
  id          String   @id @default(cuid())
  userId      String
  stationId   String
  date        DateTime @default(now())
  washType    String
  vehicleSize String
  duration    Int
  waterUsed   Float
  waterSaved  Float
  ecoPoints   Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  station     Station  @relation(fields: [stationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stationId])
}

enum StationStatus {
  active
  en_attente
  inactive
}

enum StationType {
  STATION_LAVAGE
  PARKING
}

enum CommerceType {
  NOURRITURE
  BANQUE
  CENTRE_VILLE
  STATION_SERVICE
  LAVERIE
  GARAGE
}

enum HighPressureType {
  NONE
  PASSERELLE
  ECHAFAUDAGE
  PORTIQUE
}

enum PaymentMethod {
  JETON
  ESPECES
  CARTE_BANCAIRE
}

enum ElectricityType {
  NONE
  AMP_8
  AMP_15
}

enum Role {
  USER
  ADMIN
}

enum EventType {
  PAGE_VIEW
  STATION_CREATION
  USER_REGISTRATION
}
